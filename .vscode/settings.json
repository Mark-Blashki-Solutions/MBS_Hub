{
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./tests",
    "-p",
    "test_*.py"
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "__pycache__": true,
    "**/__pycache__": true,
    ".pytest_cache": true,
    "InvoiceGenerator/.pytest_cache": true,
    "**/.pytest_cache": true
  },
  "editor.snippetSuggestions": "none",
  "python.testing.pytestArgs": [
    "; python -m coverage run -m pytest; python -m coverage xml; python -m coverage report -m"
  ]
}
